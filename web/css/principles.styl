.principles
    padding: 20px 0;
    background-image: url(/images/princip.jpg);
    background-size: cover;
    position: relative;
    &:before
        position: absolute;
        content ""
        top 0
        left 0
        bottom: 0
        right: 0
        background-color: rgba(#fff, .1)

.principles-list
    display: flex
    max-width: 840px
    width: 100%
    margin: 0 auto;
    justify-content: center;
    flex-wrap: wrap;
    
.principle
    width 260px
    position: relative;
    text-align: center;
    margin 40px 10px
    .result
        background-color: rgba(#fff, .7)
        padding: 7px 7px
        text-transform: uppercase;
        font-size: 0.8em
    .descr
        position: relative;
        margin-bottom: 20px
        font-size: 20px
        min-height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;        