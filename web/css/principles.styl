#principles
    padding: 20px 0;
    position: relative;

#principles.fixed-bg
    background-image: linear-gradient(to bottom, rgba(255,255,255,0.7) 0%,rgba(255,255,255,0.7) 100%), url(/images/02bk.jpg);

.principles-list
    display: flex
    max-width: 840px
    width: 100%
    margin: 0 auto;
    justify-content: center;
    flex-wrap: wrap;
    
.principle
    width 260px
    position: relative;
    text-align: center;
    margin 40px 10px
    .result
        background-color: #3C3C49
        color #ffffff
        padding: 7px 7px
        text-transform: uppercase;
        font-size: 0.8em
    .descr
        background-color: rgba(#fff, .7)
        position: relative;
        margin-top: 5px
        padding: 0 5px
        margin-bottom: 20px
        font-size: 20px
        min-height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;        