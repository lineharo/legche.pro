#popup-service-site
#popup-service-context
#popup-service-smm
#popup-service-design
#popup-service-event
    display: none;
    z-index 100
    position: relative;
    &:target
        display: block;
    
.popup-info
    position: fixed;
    top 0
    left: 0
    width: 100%
    height: 100%
    overflow: auto;
    background-color: #000000
    background-color: rgba(#000, .8)
    border: 1px solid #888;
    z-index 100
    display: flex;
    justify-content: center;
    align-items: flex-start;
    
    .popup-info-window
        background-color: #fff
        width 850px
        margin-top: 40px
        min-height 610px
        position: relative;
        padding: 0
        animation-name: animatetop;
        animation-duration: 0.4s
        .pi-close
            position: absolute;
            right 20px
            top -15px
            cursor: pointer;
            font-size: 2em
        h3
            text-transform: none;
            margin-top: 40px
            background-color: color-cold
            text-align: center;
            font-weight: 400;
        ul
            padding: 0 100px
        p
            margin: 0 50px 1em 50px
            font-size: 20px
        .price
            position: absolute;
            bottom: 15px
            right: 15px
        form
            margin: 40px

@keyframes animatetop
    from
        top: -300px;
        opacity: 0
    to 
        top: 0; opacity: 1


#popup-service-event
    p
        font-size: 18px

#popup-plan-individual
    input[type="submit"]
        margin-top: 3em