#statistics
    margin: 40px 0
    articles
        display: flex
        justify-content: space-around;
        flex-wrap: wrap
    .stat
        display: flex;
        flex-wrap: wrap
        justify-content: space-between
        flex-direction: column
        max-width: 250px
        align-items: center;
        margin-bottom: 60px
        .number
            width 200px
            height: 200px
            border-radius: 100px
            background-color: #3C3C49
            display: flex;
            p
                padding: 0
                margin: auto;
                font-size: 90px
                color: #fff
            p.long
                font-size: 35px
        .descr
            text-transform: uppercase;
            text-align: center;
            margin-top: 30px