#statistics
    margin: 40px 0
    articles
        display: flex
        justify-content: space-between;
    .stat
        width 300px
        display: flex;
        flex-direction: column;
        align-items: center;
        .number
            width 200px
            height: 200px
            border-radius: 100px
            background-color: color-cold
            display: flex;
            
            p
                padding: 0
                margin: auto;
                font-size: 90px
                color: #fff
            p.long
                font-size: 35px
        .descr
            text-transform: uppercase;
            text-align: center;
            margin-top: 30px