#services
    position: relative;
    width: 100%
    &:before
        position: absolute;
        content ""
        top 0
        left 0
        bottom: 0
        right: 0
        background-image: url(/images/03bk.jpg);
        background-size: cover;
        background-attachment: fixed;
        background-position: top;
        background-repeat: no-repeat;
        opacity: 0.5
        z-index: -1
        
ul.services
    list-style: none;
    padding: 0
    li
        text-transform: uppercase;
        display: flex;
        flex-wrap wrap
        justify-content: space-around;
        margin: 1.2em 0
        p
            margin: 0
            margin-bottom: 10px
            margin-right: 10px
            flex-grow: 1
            @media all and (max-width 700px)
                min-width: 100%
                text-align: center
        a
            margin-bottom: 20px