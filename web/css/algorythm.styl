.algorythm
    position: relative;
    padding: 25px 0
    &:before
        position: absolute;
        top 0
        left 0
        width 100%
        height: 100%
        background-image: url(/images/ft-clouds.jpg);
        background-size: cover;
        content: ""
        z-index: -1
        opacity: .4

.algorythm-w
    width 840px
    margin: 0 auto;
    counter-reset: heading;
    .steps
        display: flex
        flex-wrap: wrap;
        justify-content: space-between;
        align-content: center;
        .step
            width 200px
            height 100px
            display: flex
            align-items: center;
            margin 30px
            position: relative;
            font-size: 20px
            &:before
                position: absolute;
                top -5px
                left -50px
                counter-increment: heading;
                content: counter(heading)
                font-size: 4em